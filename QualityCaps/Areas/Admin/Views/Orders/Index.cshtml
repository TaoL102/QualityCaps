@model IEnumerable<QualityCaps.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gst)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrandTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus.StatusName)
        </th>
    </tr>

@foreach (var item in Model) {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>@Html.ActionLink((item.OrderID), "Details", new {id = item.OrderID})

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gst)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrandTotal)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.OrderStatus.StatusName) |
            @Html.ActionLink("Change Status", "Edit", new {id = item.OrderID})
        </td>
    </tr>
}

</table>
