@model IEnumerable<QualityCaps.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Customers</h2>


<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneWork)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.IsAccDisabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneHome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneWork)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneMobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.IsAccDisabled)
        </td>
        <td>
           

            @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID}) |
            @Html.ActionLink("Details", "Details", new { id = item.CustomerID }) |
            @*@Html.ActionLink("Delete", "Delete", new { id = item.CustomerID})*@
            @if (item.ApplicationUser.IsAccDisabled)
            {
                @Html.ActionLink("Enable Account", "DisableCustomerAccount", new {id = item.CustomerID})
            }
            else
            {
                @Html.ActionLink("Disable Account", "DisableCustomerAccount", new { id = item.CustomerID })
            }
            


        </td>
    </tr>
}

</table>
