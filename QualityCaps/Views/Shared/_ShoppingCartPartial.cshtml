@Scripts.Render("~/bundles/bundleJquery")

<script type="text/javascript">
    $(function () {
        // Document.ready -> link up remove event handler

        // Get the id from the link
        var url = "@Url.Action("GetItemsTotalAmount", "ShoppingCart")";
        funCart_Icon_Init(url);

        $("#cartLink").click(function () {
            var url = "@Url.Action("Index", "ShoppingCart",new { area="Store"})";
            funCart_Icon_Click(url);
        });
    }
    );
</script>


<a data-toggle="modal" data-target="#cartModal" id="cartLink" style="cursor:pointer">
    <i class="material-icons">shopping_cart</i>
    <span id="cartTotalQuantity"></span>
</a>


